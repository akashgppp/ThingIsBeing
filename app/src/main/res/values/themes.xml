<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ThingIsBeing" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_Accent</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="assessment_toolbar_style" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/color_Accent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Theme.ThingIsBeing.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ThingIsBeing.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ThingIsBeing.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryVariant">#388E3C</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:statusBarColor">#5167A2</item>
        <!-- Secondary colors -->
        <item name="colorSecondary">#FFEB3B</item>
        <item name="colorSecondaryVariant">#FBC02D</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Background and surface -->
        <item name="colorOnError">#E8F5E9</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnBackground">#000000</item>
        <item name="colorOnSurface">#000000</item>
    </style>
</resources>